<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500" prefWidth="500.0" styleClass="root" stylesheets="@../css/common.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.smartel.school.math.controller.ModalController">
    <StackPane prefHeight="400">
        <ImageView fx:id="imageView" fitWidth="500" preserveRatio="true" StackPane.alignment="CENTER" />
    </StackPane>
    <StackPane minWidth="500" prefHeight="102.0" prefWidth="500.0" styleClass="palette">
        <VBox StackPane.alignment="TOP_LEFT">
            <Label fx:id="requiredLabel" prefWidth="300" />
            <Label fx:id="factLabel" prefWidth="300" />
        </VBox>
        <Button alignment="CENTER" onAction="#close" StackPane.alignment="CENTER_RIGHT">Закрыть</Button>
    </StackPane>
</VBox>
