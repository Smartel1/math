<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" prefHeight="700" prefWidth="500.0" styleClass="root" stylesheets="@../css/common.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.smartel.school.math.controller.MainController">
    <HBox spacing="5.0"  styleClass="palette">
        <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="30.0" prefWidth="505.0" text="Осталось времени:" />
        <Label fx:id="timerLabel" contentDisplay="CENTER" prefHeight="30.0" prefWidth="505.0" text="00:00:00">
         <opaqueInsets>
            <Insets />
         </opaqueInsets></Label>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </HBox>
    <StackPane prefHeight="600">
        <ImageView fx:id="imageView" fitWidth="500" preserveRatio="true" StackPane.alignment="CENTER" />
    </StackPane>
    <Label fx:id="descriptionLabel" alignment="CENTER" />
    <HBox alignment="CENTER" styleClass="palette">
        <TextField fx:id="answerField" prefWidth="150" />
        <Button fx:id="mainCommitButton" onAction="#answer" text="Ответ" />
    </HBox>
</VBox>
